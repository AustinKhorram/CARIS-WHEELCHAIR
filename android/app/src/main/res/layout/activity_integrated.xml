<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".IntegratedActivity">

    <Button
        android:id="@+id/button_audio"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="24dp"
        android:onClick="onRecordAudio"
        android:text="Audio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/button_photo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="24dp"
        android:text="@string/camera_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextureView
        android:id="@+id/cameraPreview"
        android:layout_width="768px"
        android:layout_height="1024px"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.618" />

    <Button
        android:id="@+id/IMU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:text="IMU"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_audio"
        app:layout_constraintStart_toEndOf="@+id/button_photo" />

    <RadioButton
        android:id="@+id/grassButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grass"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="94dp" />

    <RadioButton
        android:id="@+id/gravelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RadioButton"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="120dp"
        tools:text="Gravel" />

    <RadioButton
        android:id="@+id/pavementButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RadioButton"
        tools:layout_editor_absoluteX="237dp"
        tools:layout_editor_absoluteY="94dp"
        tools:text="Pavement" />

    <RadioButton
        android:id="@+id/indoorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indoor"
        tools:layout_editor_absoluteX="237dp"
        tools:layout_editor_absoluteY="120dp" />

</android.support.constraint.ConstraintLayout>